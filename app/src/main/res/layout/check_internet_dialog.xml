<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_derecho"
    android:gravity="center"
    android:orientation="vertical">
<!--    android:background="#072A70"-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/wifi_off"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/urbanist_semibold"
        android:text="Sin Internet"
        android:textSize="40sp"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">
    <Button
        android:id="@+id/seguirOffline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrincipal"
        android:fontFamily="@font/urbanist_semibold"
        android:backgroundTint="@color/GrayTextInput"
        android:text="Seguir offLine" />
    <Button
        android:id="@+id/comprobarInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrincipal"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/urbanist_semibold"
        android:backgroundTint="@color/verdeClaro"
        android:text="Comprobar" />

</LinearLayout>



</LinearLayout>